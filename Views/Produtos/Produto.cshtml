@model trabalho.Models.Produto

@{
ViewData["Title"] = "Produto";
}
<h1 class="display-4">Produto</h1>
<h4>Cadastro</h4>
<div class="row">
    <div class="col-md-4">
        @ViewData["mensagem"]
        <form asp-action="Produto" asp-controller="Produtos">
            <div class="form-group">
                <label>Descricao</label><input asp-for="Descricao" class="form-control" />
            </div>
            <div class="form-group">
                <label>Preco</label><input asp-for="Preco" class="form-control" />
            </div>
            <div class="form-group">
                <label>NCM</label><input asp-for="NCM" class="form-control" />
            </div>
            <div class="form-group">
                <label>Quantidade</label><input asp-for="Quantidade" class="form-control" />
            </div>
            <input type="submit" value="Salvar" class="btn btn-success" style="margin-top: 20px;" />
        </form>
    </div>
</div>